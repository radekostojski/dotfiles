[core]
	excludesfile = ~/.gitignore_global
    editor = vim
    autocrlf = false
    pager = less -R
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color]
    branch = auto
    status = auto
    diff = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    a = add
    b = branch
    c = commit -m
    co = checkout
    d = diff
    g = grep
    ig = grep -i
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lg = log -p
    m = merge
    p = pull
    psh = push
    r = remote
    s = status
    st = status -sb

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[push]
	default = simple
#    default = current
#    default = upstream
[include]
    path = .gitconfig.user
